@model MvcToDoList.Models.ToDoListStatusPriorityViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Create New</a>
</p>

<form asp-controller="ToDoList" asp-action="Index" method="get">
    <p>
        Status:
        <select asp-for="ToDoListStatus" asp-items="Model.Statuses">
            <option value="">All</option>
        </select>

        Priority:
        <select asp-for="ToDoListPriority" asp-items="Model.Priorities">
            <option value="">All</option>
        </select>

        Task: <input type="text" name="SearchString" />
        <input type="submit" value="Filter" />
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ToDoLists[0].Task)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ToDoLists[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ToDoLists[0].Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ToDoLists[0].Priority)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ToDoLists[0].Assgignee)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ToDoLists[0].Created)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ToDoLists[0].CompleteBy)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.ToDoLists)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Task)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Priority)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Assgignee)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Created)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CompleteBy)
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-action="Edit" asp-route-id="@item.Id"
                       class="btn btn-warning mx-2">Edit</a>

                        <a asp-action="Details" asp-route-id="@item.Id"
                       class="btn btn-primary mx-2">Details</a>

                        <a asp-action="Delete" asp-route-id="@item.Id"
                       class="btn btn-danger mx-2">Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
